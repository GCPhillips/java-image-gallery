<!DOCTYPE html>
<html>
  <head>
    <title>Images for {{user}}</title>
    <meta charset="utf-8"/>
  </head>
  <body>
      {{#each images}}
      <div class="image"> {{imagedata}} </div>
      <form action="/user/{{username}}/images/{{uuid}}" method="DELETE">
        <button type="submit" name="deleteimage" value={{uuid}}
      </form>
      {{/each}}
      <hr>
      <div class="addform">
        <form action="/user/{{username}}/images" method="POST">
          <label for="img">Add Image:</label>
          <input type="file" id="imagedata" name="imagedata" accept="image/*">
          <input type="submit">
        </form>
      </div>
  </body>
</html>
